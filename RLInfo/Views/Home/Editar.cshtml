<h3 class="text-primary">Alterar</h3>

<form class="mt-5" method="post" action="Editar">

    <fieldset class="border border-dark p-2 m-2">
        <legend class="w-auto pl-3 pr-3">Editar Cliente</legend>
        <div class="container row">

            <div class="form-group col-3">
                <label class="text-secondary">Cliente</label>
                <input class="form-control col bg-secondary" type="text" name="nome" maxlength="60" value="@ViewData["Nome"]" readonly />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Nome </label>
                <input class="form-control col" type="text" name="nomex" maxlength="60" value="@ViewData["Nome"]" pattern="[A-Za-z\s]{4,60}" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Endereço</label>
                <input class="form-control col" type="text" name="endereco" maxlength="60" value="@ViewData["Endereco"]" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Bairro </label>
                <input class="form-control col" type="text" name="bairro" maxlength="60" value="@ViewData["Bairro"]" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Estado</label>
                <input class="form-control col" type="text" name="estado" maxlength="60" value="@ViewData["Estado"]" pattern="[A-Za-z\s]{1,60}" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Cep </label>
                <input class="form-control col" type="text" name="cep" maxlength="60" value="@ViewData["Cep"]" pattern="[0-9]+$" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Telefone </label>
                <input class="form-control col" type="text" name="telefone" maxlength="60" value="@ViewData["Telefone"]" pattern="[0-9]+$" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">CPF </label>
                <input class="form-control col" type="text" name="cpf" maxlength="13" minlength="9" value="@ViewData["CPF"]" pattern="[0-9]+$" />
            </div>

        </div>
    </fieldset>
    <!-------------------------------------------------------------------------->
    <hr />
    <fieldset class="border border-dark p-2 m-2 ">
        <legend class="w-auto pl-3 pr-3">Dados do Equipamento</legend>
        <div class="container row">
            <div class="form-group col-3">
                <label class="text-secondary">Modelo</label>
                <input class="form-control col" type="text" name="modelo" maxlength="60" value="@ViewData["Modelo"]" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Marca </label>
                <input class="form-control col" type="text" name="marca" maxlength="60" value="@ViewData["Marca"]" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary">Defeito</label>
                <input class="form-control col" type="text" name="defeito" maxlength="60" value="@ViewData["Defeito"]" />
            </div>
            <div class="form-group col-3">
                <label class="text-secondary"> Tipo</label>
                <input class="form-control col" type="text" name="tipo" maxlength="60" value="@ViewData["Tipo"]" />
            </div>
            <div class="form-group col-6">
                <label class="text-secondary"> Observação </label>
                <textarea type="text" rows="5" cols="5" maxlength="300" name="observacao" class="form-control"> @ViewData["ObservacaoY"]</textarea>
            </div>

        </div>
    </fieldset>
    <!------------------------------------------------------------------------------->
    <hr />
    <div class="form-group container row">
        <button type="submit" name="Menu" value="Atualizar" class="btn btn-dark mr-3">Alterar</button>
        <button type="submit" name="Menu" value="Delete" class="btn btn-dark mr-3">Deletar</button>
        <button type="submit" class="btn btn-dark mr-3" onclick="location.href='@Url.Action("Carteira", "Home")'">Voltar</button>
       
    </div>

</form>