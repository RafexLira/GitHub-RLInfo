@{
    ViewBag.Title = "Home Page";
}
<d class="mt-4">

    <h3 class="text-primary">Login e Senha</h3>
    <form method="post" action="Index" name="" class="ml-2">
        <div class="row">
            <div class="row col-12">
                <div class="form-group col-1">
                    <label>Usuário</label>
                </div>
                <div class="form-group col-2">
                    <input type="text" name="nome" maxlength="30" required />
                </div>
                <div class="form-group col-1">
                    <label>Senha</label>
                </div>
                <div class="form-group col-2">
                    <input type="password" name="senha" maxlength="30" class="mb-2" required />
                </div>
            </div>
            <div class=" row form-group col-2">

                <button type="submit">Entrar</button>
                <button type="button" class="btn btn-dark btn-sm">Sair</button>
            </div>
        </div>
    </form>
    <hr class="border-dark" />

